{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    // Added for Preact JSX support (enables .tsx files)
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    // Add declaration files for npm package
    "declaration": true,
    "declarationDir": "./dist",
    // Path mapping for React compatibility
    "paths": {
      "react": ["./node_modules/preact/compat/"],
      "react-dom": ["./node_modules/preact/compat/"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
